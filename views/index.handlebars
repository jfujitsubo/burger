<h1>Grub on some Burgers</h1>

<main>
    <div class = "container">
        <div class = "row">
            <div class = "col-md-6">
                {{#each burgers}}
                    {{#unless this.devoured}}
                        <div>
                            <form action = '/burgers/eat/{{this.id}}' method='POST'>
                                <button type = "submit" class= 'burgerChoice btn btn-secondary'> {{this.burger_name}}</button>
                            </form>
                        </div>
                    {{/unless}}
                {{/each}}    
            </div>
        
            <div class = "col-md-6">
                {{#each burgers}}
                    {{#if this.devoured}}
                        <div class = 'burgerDevoured'>
                            <li class="form-control">
                                {{this.id}}. {{this.burger_name}}
                            </li>
                        </div>
                    {{/if}}
                {{/each}}
            
            </div>
        </div>
    </div>
</main>

<h3 class = "text-center">Add your own burger!</h3>

<div class = "row text-center">
    <div class = "col-md-12">
        <form action= "/burgers" method="POST">
            <input type = 'text' id = "name" name = "burger_name" placeholder = "your burger">
            <button type = "submit" class = "addBurger btn btn-secondary">Add Burger</button>
        </form>
    </div>

</div>